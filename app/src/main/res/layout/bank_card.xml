<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/cv_BankCard_BC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_text_bg_color"
                android:orientation="vertical"
                android:padding="17dp">

                <TextView
                    android:id="@+id/tv_BankName_BC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_title_color"
                    android:textSize="21sp"
                    tools:text="Альфа Банк" />

                <TextView
                    android:id="@+id/tv_BankRegion_BC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_subtitle_color"
                    android:textSize="16sp"
                    tools:text="Закарпатская область" />

                <TextView
                    android:id="@+id/tv_BankCity_BC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_subtitle_color"
                    android:textSize="16sp"
                    tools:text="Ужгород" />

                <TextView
                    android:id="@+id/tv_BankPhone_BC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/c_text_color"
                    android:textSize="13sp"
                    tools:text="Тел. : 044 92 816 25" />

                <TextView
                    android:id="@+id/tv_BankAddress_BC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/c_text_color"
                    android:textSize="13sp"
                    tools:text="Адрес : ул. Десятичная, 20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_btn_bg_color"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/btn_Link_BC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/c_btn_bg_color"
                    android:src="@drawable/ic_main_link" />

                <ImageButton
                    android:id="@+id/btn_Map_BC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/c_btn_bg_color"
                    android:src="@drawable/ic_main_map" />

                <ImageButton
                    android:id="@+id/btn_Phone_BC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/c_btn_bg_color"
                    android:src="@drawable/ic_main_phone" />

                <ImageButton
                    android:id="@+id/btn_Details_BC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/c_btn_bg_color"
                    android:src="@drawable/ic_main_details" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>